{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6",
    "body": [
        {
            "type": "TextBlock",
            "text": "Coloque o Token Recebido no e-mail cadastrado.",
            "wrap": false,
            "size": "Default",
            "color": "Accent",
            "style": "heading"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "Input.Text",
                            "placeholder": "Placeholder text",                            
                            "spacing": "Medium",
                            "isRequired": true,
                            "errorMessage": "Token é obrigatório",
                            "id": "token"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "ActionSet",
                            "horizontalAlignment": "Center",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "VALIDAR",
                                    "role": "Button"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}